    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var addIngredientBtn = document.getElementById('addIngredientBtn');
            var ingredientInputs = document.getElementById('ingredientInputs');

            addIngredientBtn.addEventListener('click', function () {
                var index = ingredientInputs.children.length; // Get the index of the next ingredient input field
                var ingredientHtml = `
                            <div class="ingredient">
                                <div class="form-group">
                                    <label for="Ingredients_${index}__Name">Name:</label>
                                    <input type="text" id="Ingredients_${index}__Name" name="Ingredients[${index}].Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="Ingredients_${index}__Weight">Weight:</label>
                                    <input type="text" id="Ingredients_${index}__Weight" name="Ingredients[${index}].Weight" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="Ingredients_${index}__Type">Type:</label>
                                    <select id="Ingredients_${index}__Type" name="Ingredients[${index}].TypeId" class="form-control">
        @foreach (var option in Model.ProductTypeOptions)
        {
                                                <option value="@option.Id">@option.Name</option>
        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Ingredients_${index}__TypeQuantity">Quantity:</label>
                                    <input type="text" id="Ingredients_${index}__TypeQuantity" name="Ingredients[${index}].TypeQuantity" class="form-control" />
                                </div>
                                <button type="button" class="btn btn-primary save-ingredient">Save Ingredient</button>
                            </div>
                        `;

                var ingredientDiv = document.createElement('div');
                ingredientDiv.innerHTML = ingredientHtml;
                ingredientInputs.appendChild(ingredientDiv);
            });

            // Event listener for dynamically added "Save Ingredient" buttons
            ingredientInputs.addEventListener('click', function (event) {
                if (event.target.classList.contains('save-ingredient')) {
                    // Implement the logic to save the ingredient here
                    console.log('Ingredient saved');
                }
            });
        });
    </script>
}

