@model IEnumerable<AllRecipesViewModel>

@{
    ViewBag.Title = "All Recipes";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var recipe in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@recipe.Name</h5>
                <p class="mb-0"><span class="fw-bold">Total time: </span>@recipe.TotalTime</p>
                <p class="mb-0"><span class="fw-bold">Type: </span>@recipe.RecipeType.Name</p>
            </div>

            <a asp-controller="Recipe" asp-action="Index" asp-route-id="@recipe.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
            @if (User.Identity.Name == recipe.Creator)
            {
                <a asp-controller="Recipe" asp-action="Index" asp-route-id="@recipe.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
            }
            else
            {
                <form class="input-group-sm " asp-controller="Recipe" asp-action="Index" asp-route-id="@recipe.Id">
                    <input type="submit" value="Join the Event" class="fs-6 btn btn-warning mb-3 w-100 p-3 fw-bold" />
                </form>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}