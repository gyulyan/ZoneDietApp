@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li><a class="text-right" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a></li>
        <li>
            <a href="javascript:void(0)" class="text-right" onclick="document.getElementById('logoutForm').submit();">Logout</a>
            <form id="logoutForm" class="d-none" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post"></form>
        </li>
    }
    else
    {
        <li><a class="text-right" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a class="text-right" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    }
</ul>